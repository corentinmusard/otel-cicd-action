{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": { "ignore": ["dist/**"] },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "complexity": {
        "useLiteralKeys": "off",
        "noExcessiveCognitiveComplexity": "info"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
