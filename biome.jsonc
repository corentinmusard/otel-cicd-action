{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/biome/core"],
  "files": { "includes": ["!**/dist"] },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "performance": {
        "noNamespaceImport": "off"
      },
      "complexity": {
        // conflicts with tsconfig
        "useLiteralKeys": "off"
      }
    }
  }
}
